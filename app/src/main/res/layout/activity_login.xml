<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/firstTxt"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="@string/already_nhave_an_naccount"
            android:layout_alignParentStart="true"
            android:lineHeight="35sp"
            android:textSize="26sp"
            android:textColor="@color/dark"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:layout_width="209dp"
            android:layout_height="172dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/img_1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlSignup"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:text="@string/email"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/logEmail"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/emailLabel"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        android:layout_marginEnd="60dp"/>

    <TextView
        android:id="@+id/passLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logEmail"
        android:textColor="@color/colorPrimary"
        android:text="@string/password"
        android:layout_marginTop="30dp"
        android:textSize="17sp"
        android:layout_marginStart="40dp"
        />

    <EditText
        android:id="@+id/logPassword"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passLabel"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginStart="40dp"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:layout_marginEnd="60dp"/>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logPassword"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/btn_new"
        android:text="@string/login"
        android:textColor="#ffffff"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txtReg"
        android:text="@string/dont"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnLogin"
        android:textColor="@color/txt"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>