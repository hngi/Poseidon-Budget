<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="231dp"
        android:layout_height="219dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="117dp"
        android:layout_marginRight="13dp"
        android:src="@drawable/signup1" />


    <TextView
        android:id="@+id/txt_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/nunito"
        android:paddingLeft="20dp"
        android:text="Already"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="115dp"
        android:fontFamily="@font/nunito"
        android:paddingLeft="20dp"
        android:text="Have an"
        android:textColor="#000000"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/txt_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="161dp"
        android:fontFamily="@font/nunito"
        android:paddingLeft="20dp"
        android:text="Account?"
        android:textColor="#000000"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:ems="10"
        android:fontFamily="@font/nunito"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#6EA1CD"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_already_have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/border"
        android:text="New user?"
        android:textColor="#264759"
         />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"

        android:layout_marginBottom="44dp"
        android:layout_toRightOf="@id/txt_already_have"
        android:background="@drawable/border"
        android:paddingLeft="2dp"
        android:text="Register now"
        android:layout_marginRight="50dp"




        android:textColor="#4681B3" />


    <EditText
        android:id="@+id/et_password"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"
        android:ems="10"
        android:fontFamily="@font/nunito"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#6EA1CD"
        android:textSize="14sp" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="117dp"
        android:background="@drawable/button"
        android:fontFamily="@font/nunito"
        android:text="LOGIN"
        android:textColor="#ffffff" />


</RelativeLayout>