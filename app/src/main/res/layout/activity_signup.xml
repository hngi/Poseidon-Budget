<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/firstTxt"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/txtSignup"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/nunito_semibold"
            android:lineHeight="35sp"
            android:textSize="26sp"
            android:textColor="@color/dark"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp" />

        <ImageView
            android:layout_width="224dp"
            android:layout_height="160dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="24dp"
            android:layout_toEndOf="@+id/firstTxt"
            android:src="@drawable/img_1" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlSignup"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:id="@+id/rlform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/registerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/register"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registerLabel"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/nunito"
                android:hint="@string/email"
                android:textColorHint="@color/colorAccentDark"
                android:backgroundTint="@color/colorPrimary"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etEmail"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/nunito"
                android:hint="@string/username"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/colorAccentDark"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etUsername"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/nunito"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/colorAccentDark"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/confirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPassword"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/nunito"
                android:hint="@string/confir_your_password"
                android:inputType="textPassword"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/colorAccentDark"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />


            <Button
                android:id="@+id/btnRegister"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirmPass"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_new"
                android:text="@string/register"
                android:textColor="#ffffff"
                android:fontFamily="@font/nunito_bold"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnRegister"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/have_an_account"
                android:textColor="@color/txt"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>