<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff
"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_vector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="76dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/signup1" />


    <TextView
        android:id="@+id/txt_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nunito"
        android:paddingLeft="20dp"
        android:text="Here's"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_your"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/nunito"
        android:paddingLeft="20dp"
        android:text="your first"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txt_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="133dp"
        android:fontFamily="@font/nunito"
        android:paddingLeft="20dp"
        android:text="step with"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="177dp"
        android:fontFamily="@font/nunito"
        android:paddingLeft="20dp"
        android:text="us"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="352dp"
        android:layout_height="483dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="248dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="2dp"
            app:contentPadding="7dp">


            <EditText
                android:id="@+id/et_fullname"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/card_view"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:autoText="true"
                android:ems="10"
                android:hint="Full name"
                android:inputType="textPersonName"
                android:textColorHint="#6EA1CD"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#6EA1CD"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/editText2"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:hint="Phone"
                android:textColorHint="#6EA1CD"
                android:ems="10"
                android:textSize="14sp"
                android:inputType="phone" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignStart="@+id/card_view"
                android:layout_alignBottom="@+id/card_view"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="380dp"
                android:text="Already have an account?"
                android:textColor="#264759" />


            <EditText
                android:id="@+id/et_password"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#6EA1CD"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="280dp"
                android:background="@drawable/button"
                android:fontFamily="@font/nunito"
                android:text="REGISTER"
                android:textColor="#ffffff" />


        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>